mixin picture(imgPath,title,addClass,showModal)
  picture(
    itemscope,
    itemtype='http://schema.org/ImageObject',
    class=`${addClass ? `${addClass}__picture` : ""}`)
    source(
      srcset!=`${imgPath}`,
      itemprop='contentUrl')
    img.img--full.img--center(
      src!=`${imgPath}`, 
      alt!=`${title}`,
      title!=`${title}`,
      draggable="false",
      loading="lazy",
      class!=`${addClass ? `${addClass}__image` : ""} ${showModal ? showModal : ""} `,
      itemprop='contentUrl')