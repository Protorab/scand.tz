.section.top-section
  //bg-element__1 start
  span.bg-element.bg-element__1.__green(aria-hidden="true")
  //bg-element__1 end

  //top-section__wrapper start
  .wrapper.top-section__wrapper

    //top-section__content start
    article.top-section__content

      //top-section__title start
      h1.top-section__title Поставщик Дальнего Востока
      //top-section__title end

      //top-section__text start
      .top-section__text 
        p Наши клиенты получают полный спектр услуг по работе с Китаем.<br> Начиная с подбора производителя заканчивая доставкой товара до двери.<br> Настолько прозрачных сделок с Китаем вы еще не осуществляли.
      //top-section__text end

      //top-section__link start
      a.link.top-section__link(href="#") Узнать больше
      //top-section__link end

    //top-section__content end
    
    //top-section__picture start
    include ./../../mixins/picture-NL
    +picture(
      "./img/top-image.jpg",
      "Поставщик Дальнего Востока",
      "top-section")
    //top-section__picture end
    
  //top-section__wrapper end
  
  //advantages start
  .advantages
    include ./../../mixins/advantages-card
    +advantages-card(
      "./img/icons/icon-production.svg",
      "Поиск производителей по товару")
    +advantages-card(
      "./img/icons/icon-specific__production.svg",
      "Поиск конкретного производителя")
    +advantages-card(
      "./img/icons/icon-delivery.svg",
      "Доставка образцов товаров")
  //advantages end

